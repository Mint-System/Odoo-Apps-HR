<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record  id="employee_fleet_calendar_view" model="ir.ui.view">
        <field name="name">hr_vehicle_request_calendar.employee_fleet_calendar_view</field>
        <field name="model">employee.fleet</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar date_start="date_from" date_stop="date_to" string="Vehicle Requests" mode="month" quick_add="False" color="fleet" event_open_popup="True"></calendar>
        </field>
    </record>

    <record  id="fleet_reserved_calendar_view" model="ir.ui.view">
        <field name="name">hr_vehicle_request_calendar.fleet_reserved_calendar_view</field>
        <field name="model">fleet.reserved</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Vehicle Reservations" date_start="date_from" date_stop="date_to" mode="month" quick_add="False" color="reserved_obj" event_open_popup="True"></calendar>
        </field>
    </record>

    <record id="action_fleet_reserved" model="ir.actions.act_window">
        <field name="name">Vehicle Reservations</field>
        <field name="res_model">fleet.reserved</field>
        <field name="view_mode">calendar</field>
    </record>

    <record id="hr_vehicle_request.action_employee_fleet" model="ir.actions.act_window">
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem id="fleet_reserved_sub_menu" name="Vehicle Reservations" parent="hr_vehicle_request.employee_fleet_menu" sequence="1" groups="fleet.fleet_group_user" action="action_fleet_reserved" />

    <record id="employee_fleet_form_view" model="ir.ui.view">
        <field name="name">hr_vehicle_request_calendar.employee_fleet_form_view</field>
        <field name="model">employee.fleet</field>
        <field name="inherit_id" ref="hr_vehicle_request.employee_fleet_form_view" />
        <field name="arch" type="xml">
    
          <xpath expr="//field[@name='date_to']" position="after">
            <field name="meeting_id" attrs="{'invisible': [('meeting_id', '=', False)]}" />
          </xpath>

        </field>
      </record>

</odoo>
