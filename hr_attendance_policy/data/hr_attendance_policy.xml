<odoo>
    <record id="swiss_labor_law_1" model="hr.attendance.policy">
        <field name="name">Swiss Labor Law 1</field>
        <field name="warning_message">6 hours of work requires 15 minutes break</field>
    </record>

    <record id="swiss_labor_law_1_rule_1" model="hr.attendance.rule">
        <field name="policy_id" ref="hr_attendance_policy.swiss_labor_law_1" />
        <field name="min_work_hours">5.5</field>
        <field name="max_work_hours">7.0</field>
        <field name="min_delta">0.25</field>
        <field name="period_days">1</field>
    </record>

</odoo>
