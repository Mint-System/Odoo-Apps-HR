<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="hr_applicant_view_form" model="ir.ui.view">
    <field name="name">hr_recruitment_firstname.hr_applicant_view_form</field>
    <field name="model">hr.applicant</field>
    <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form" />
    <field name="arch" type="xml">

      <xpath expr="//field[@name='partner_name']" position="attributes">
        <attribute name="attrs">{'readonly': True}</attribute>
      </xpath>

      <xpath expr="//field[@name='partner_id']" position="before">
          <field name="lastname" attrs="{'required': [('firstname', '=', False)]}" />
          <field name="firstname" attrs="{'required': [('lastname', '=', False)]}" />
      </xpath>

    </field>
  </record>

</odoo>
