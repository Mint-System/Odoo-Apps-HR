<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_view_form" model="ir.ui.view">
        <field name="name">hr_expense_vehicle_request.hr_expense_view_form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="view_vehicle_requests" type="object" class="oe_stat_button" icon="fa-car">
                    <field string="Vehicle Requests" name="request_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
