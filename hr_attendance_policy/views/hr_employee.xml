    <record id="hr_employee_attendance_policy_form_view" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.attendance.policy</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="policy_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_attendance_policy_tree" model="ir.ui.view">
        <field name="name">Attendance Policy List</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="before">
                <header>
                    <button string="Create Attendance Policy" type="object"
                            name="action_create_attendance_policy"
                            class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
